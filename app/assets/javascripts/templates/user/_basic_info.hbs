<section class="user-basic-info widget-box transparent span6">
  <section class="widget-header">
    <h4 class="lighter">Basic Information</h4>
  </section>
  <section class="widget-body profile-user-info">
    <section class="profile-info-row">
      <section class="profile-info-name">
        Birth Date
      </section>
      <section class="profile-info-value">
        {{#if isEditingInfo}}
        {{view App.DateField valueBinding="birthDate"}}
        {{else}}
        <span>{{birthDate}}</span>
        {{/if}}
      </section>
    </section>
    <section class="profile-info-row">
      <section class="profile-info-name">
        Gender
      </section>
      <section class="profile-info-value">
        {{#if isEditingInfo}}
        {{view Ember.TextField valueBinding='gender'}}
        {{else}}
        <span>{{gender}}</span>
        {{/if}}
      </section>
    </section>
    <section class="profile-info-row">
      <section class="profile-info-name">
        Religious Views
      </section>
      <section class="profile-info-value">
        {{#if isEditingInfo}}
        {{view Ember.TextField valueBinding='religiousViews'}}
        {{else}}
        <span>{{religiousViews}}&nbsp;</span>
        {{/if}}
      </section>
    </section>
    <section class="profile-info-row">
      <section class="profile-info-name">
        Political Views
      </section>
      <section class="profile-info-value">
        {{#if isEditingInfo}}
        {{view Ember.TextField valueBinding='politicalViews'}}
        {{else}}
        <span>{{politicalViews}}&nbsp;</span>
        {{/if}}
      </section>
    </section>
    <section class="profile-info-row">
      <section class="profile-info-name">
        Looking For
      </section>
      <section class="profile-info-value">
        {{#if isEditingInfo}}
        {{view Ember.TextField valueBinding='lookingFor'}}
        {{else}}
        <span>{{lookingFor}}&nbsp;</span>
        {{/if}}
      </section>
    </section>
    <section class="profile-info-row">
      <section class="profile-info-name">
        Interested In
      </section>
      <section class="profile-info-value">
        {{#if isEditingInfo}}
        {{view Ember.TextField valueBinding='interestedIn'}}
        {{else}}
        <span>{{interestedIn}}&nbsp;</span>
        {{/if}}
      </section>
    </section>
  </section>
</section>
